<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cornsilk"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/FloralWhite"
                android:text="지능테스트,사회성숙도검사 "
                android:textColor="@color/black"
                android:textSize="20dp"></Button>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:drawableTop="@drawable/console"

                    android:text="게임"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    >

                </Button>

                <Button
                    android:id="@+id/pill"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:drawableTop="@drawable/pills"
                    android:text="약"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/dongwha"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:drawableTop="@drawable/mortarboard"
                    android:text="동화"
                    android:textColor="@color/black"
                    android:textSize="19dp"

                    >

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="-329dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/study"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:drawableTop="@drawable/group"
                    android:text="교육사이트이동"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </Button>

                <Button
                    android:id="@+id/locate"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:drawableTop="@drawable/smartphone"
                    android:text="위치"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:drawableTop="@drawable/diary"
                    android:text="일기장"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </Button>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="25dp"


                >

            </View>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:text="home"
                    android:textColor="@color/black"
                    android:textSize="20dp"


                    >

                </Button>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:text="검색"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    >

                </Button>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/FloralWhite"
                    android:text="MY PAGE"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    >

                </Button>

            </LinearLayout>


            <!--            BottomNavitgation-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>